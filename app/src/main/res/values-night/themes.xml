<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AapanaVyapar" parent="Theme.MaterialComponents.DayNight">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkSecondary</item>

        <item name="android:textColorPrimary" tools:targetApi="l">@color/darkPrimaryTextColor</item>

        <item name="android:textColorSecondary" tools:targetApi="l">@color/darkSecondaryTextColor</item>

        <item name="android:textColor" tools:targetApi="l">@color/darkHeading</item>

        <item name="android:colorPrimary" tools:targetApi="l">@color/darkPrimary</item>

        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/darkColorPrimaryDark</item>

        <item name="android:navigationBarColor" tools:targetApi="l">@color/darkNavigationBarColor</item>

        <item name="android:windowBackground" tools:targetApi="l">@color/darkWindowBackground</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AapanaVyapar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/custom_star</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/darkPrimaryTextColor</item>
    </style>

</resources>
