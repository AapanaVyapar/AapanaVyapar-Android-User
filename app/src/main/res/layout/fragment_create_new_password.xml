<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewPasswordFragment">

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="@dimen/MAJOR_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sign_in_logo6"
        android:layout_width="107dp"
        android:layout_height="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space"
        app:srcCompat="@drawable/logoav" />

    <TextView
        android:id="@+id/sign_in_logo_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="AapanaVyapar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_logo6"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="@+id/sign_in_logo6"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo6"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space13"
        android:layout_width="0dp"
        android:layout_height="@dimen/MINOR_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_text6" />

    <TextView
        android:id="@+id/instead_of_forgotted_password_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alice"
        android:text="Forgot Password"
        android:textColor="?colorSecondary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space13"
        tools:ignore="Miss@string/ingConstraints" />

    <Space
        android:id="@+id/space11"
        android:layout_width="0dp"
        android:layout_height="@dimen/MINOR_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instead_of_forgotted_password_header" />

    <TextView
        android:id="@+id/create_new_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap_medium"
        android:text="Enter New Password"
        android:textColor="?android:textColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/create_password"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/create_password"
        app:layout_constraintTop_toBottomOf="@+id/space11"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/create_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="             type here..."
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/asap_medium"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_new_password_label"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space3"
        android:layout_width="0dp"
        android:layout_height="@dimen/minor_component_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_password" />

    <TextView
        android:id="@+id/confirm_password_label"
        android:layout_width="156dp"
        android:layout_height="25dp"
        android:fontFamily="@font/asap_medium"
        android:textColor="?android:textColor"
        android:text="@string/re_enter_password"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password"
        app:layout_constraintStart_toStartOf="@+id/confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/space3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="             type here..."
        android:fontFamily="@font/asap_medium"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_label"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="@dimen/MINOR_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password" />

    <Button
        android:id="@+id/next_btn_create_new_password"
        android:layout_width="305dp"
        android:layout_height="66dp"
        android:fontFamily="@font/asap_medium"
        android:text="Reset >>"
        android:background="?colorPrimary"
        app:backgroundTint="?colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/space12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        app:layout_constraintVertical_bias="0.0" />

    <Space
        android:id="@+id/space12"
        android:layout_width="0dp"
        android:layout_height="@dimen/END_Component_Gap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>