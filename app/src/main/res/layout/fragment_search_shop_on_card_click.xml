<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/major_component_gap"
    tools:context=".ShopOnCardClick">

    <ScrollView
        android:id="@+id/scrollview_searchshop_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/search_mapView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchView" />

            <LinearLayout
                android:layout_margin="15dp"
                android:fadeScrollbars="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/searched_shop_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customborder"
                    android:src="@drawable/logoav" />

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/search_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="?android:textColor"
                        android:text="Shop Name"/>

                    <RatingBar
                        android:id="@+id/sreach_shop_ratings"
                        style="@style/RatingBar"
                        android:progressTint="?colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="21dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/shopkeeper_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asap"
                    android:layout_marginTop="15dp"
                    android:textSize="17dp"
                    android:text="Shopkeeper Name" />

                <TextView
                    android:id="@+id/operational_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asap"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textColor="?android:textColor"
                    android:text="Operational Hours" />

                <LinearLayout
                    android:id="@+id/week_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="@+id/operational_hours">

                <TextView
                    android:id="@+id/sun"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/asap"
                    android:textSize="17dp"
                    android:text="Sun"/>

                    <TextView
                        android:id="@+id/mon"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="@+id/sun"
                        android:fontFamily="@font/asap"
                        android:textSize="17dp"
                        android:layout_margin="10dp"
                        android:text="Mon"/>

                    <TextView
                        android:id="@+id/tue"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/asap"
                        android:textSize="17dp"
                        android:layout_alignParentRight="@+id/mon"
                        android:text="Tue"/>

                    <TextView
                        android:id="@+id/wed"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/asap"
                        android:textSize="17dp"
                        android:layout_alignParentRight="@+id/tue"
                        android:text="Wed"/>

                    <TextView
                        android:id="@+id/thu"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/asap"
                        android:textSize="17dp"
                        android:layout_alignParentRight="@+id/wed"
                        android:text="Thu"/>
                    <TextView
                        android:id="@+id/fri"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/asap"
                        android:textSize="17dp"
                        android:layout_alignParentRight="@+id/thu"
                        android:text="Fri"/>
                    <TextView
                        android:id="@+id/sat"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/asap"
                        android:textSize="17dp"
                        android:layout_alignParentRight="@+id/fri"
                        android:text="Sat"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="@+id/week_linearLayout">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:fontFamily="@font/asap" />
                </LinearLayout>

                <TextView
                    android:id="@+id/business_information_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Information"
                    android:fontFamily="@font/asap"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:layout_marginTop="15dp"
                    android:textColor="?android:textColor" />

                <TextView
                    android:id="@+id/business_information_Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asap"
                    android:textSize="17dp"
                    android:layout_marginTop="15dp"
                    android:text="Business Information Description" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_for_searchshop_products"
                    android:fontFamily="@font/asap"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/search_shop_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:fontFamily="@font/asap"
                    android:layout_marginTop="15dp"
                    android:textColor="?android:textColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/search_shop_comment_recyclerview"
                    android:fontFamily="@font/asap"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:fontFamily="@font/asap"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/commentBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Post Your Feedback"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <RatingBar
                        android:id="@+id/commentRating"
                        style="@style/RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/commentButton"
                        app:layout_constraintStart_toEndOf="@+id/commentBox"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/commentButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/send_comment"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageButton>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>