<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/major_component_gap"
    tools:context=".ShopOnCardClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:id="@+id/scrollview_searchshop_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/search_mapView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/searchView" />

                <ImageView
                    android:id="@+id/searched_shop_image"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:src="@drawable/logoav" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/search_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/asap"
                    android:text="Shop Name"
                    android:textColor="?android:textColor"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/sreach_shop_ratings"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="21dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/shopkeeper_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopkeeper Name"/>
            <TextView
                android:id="@+id/operational_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operational Hours"
                android:fontFamily="@font/asap"
                android:textColor="?android:textColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/business_information_heading"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Business Information"/>

            <TextView
                android:id="@+id/business_information_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Information Description" />



            <HorizontalScrollView
                android:id="@+id/horizontal_view_for_recyclerview_for_searchshop_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/product_linearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_for_searchshop_products"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/search_shop_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textStyle="bold"
                android:fontFamily="@font/asap"
                android:textColor="?android:textColor"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_shop_comment_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                     <EditText
                         android:id="@+id/commentBox"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="Post Your Feedback"/>
                     <requestFocus/>

                    <RatingBar
                        android:id="@+id/commentRating"
                        style="@style/RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="34dp"
                        android:layout_marginTop="18dp"
                        android:layout_toEndOf="@+id/commentBox"
                        android:isIndicator="false"
                        android:stepSize="1"
                        android:numStars="5"/>

                    <ImageButton
                        android:id="@+id/commentButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="80dp"
                        android:layout_toEndOf="@+id/commentRating"
                        android:src="@drawable/send_comment">

                    </ImageButton>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>