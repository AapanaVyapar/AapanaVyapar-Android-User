<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupConfirmOtpFragment">


    <Button
        android:id="@+id/signup_forgot_password_confirm_otp_button"
        android:layout_width="278dp"
        android:layout_height="76dp"
        android:layout_marginBottom="156dp"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sign_in_logo_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="AapanaVyapar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo5"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/signup_forgot_password_confirm_otp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints="*"
        android:ems="10"
        android:hint="              Enter OTP"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_confirm_otp_heading" />

    <TextView
        android:id="@+id/resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/alice"
        android:text="Resend OTP "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/signup_forgot_password_confirm_otp_text"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/signup_forgot_password_confirm_otp_text"
        app:layout_constraintTop_toBottomOf="@+id/signup_forgot_password_confirm_otp_text"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/sign_in_logo5"
        android:layout_width="107dp"
        android:layout_height="86dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_logo_text5"
        app:layout_constraintStart_toStartOf="@+id/sign_in_logo_text5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoav" />

    <TextView
        android:id="@+id/forgot_password_confirm_otp_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/alice"
        android:text="Reset Password"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_text5" />

</androidx.constraintlayout.widget.ConstraintLayout>