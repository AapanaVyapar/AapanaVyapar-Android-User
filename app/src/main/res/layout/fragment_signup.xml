<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SignupFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sign_in_logo2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:scrollbarSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.052"
                app:srcCompat="@drawable/logoav"/>

            <TextView
                android:id="@+id/sign_in_logo_text2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:fontFamily="@font/asap"
                android:letterSpacing="0.1"
                android:scrollbarSize="8dp"
                android:text="AapanaVyapar"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_logo2"
                app:layout_constraintStart_toStartOf="@+id/sign_in_logo2"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_logo2"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/sign_up_heading"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:fontFamily="@font/inknut_antiqua_light"
                android:text="Sign Up"
                android:textColor="?colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.182"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space6"/>

            <TextView
                android:id="@+id/sign_up_fill_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antic"
                android:text="Fill The Form To Join"
                android:textColor="?android:textColor"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_heading"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sign_up_heading"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_heading"/>


            <Space
                android:id="@+id/space5"
                android:layout_width="0dp"
                android:layout_height="@dimen/major_component_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_fill_form"/>

            <TextView
                android:id="@+id/sign_up_edit_text_username_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="UserName"
                android:textColor="?android:textColor"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_input_username"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sign_up_input_username"
                app:layout_constraintTop_toBottomOf="@+id/space5"/>

            <EditText
                android:id="@+id/sign_up_input_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D3CCCC"
                android:ems="15"
                android:fontFamily="@font/asap_medium"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                android:textColorHint="#BFBDBD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_username_heading"
                app:layout_goneMarginEnd="2dp"/>


            <TextView
                android:id="@+id/sign_up_edit_text_email_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:textColor="?android:textColor"
                android:text="Email"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_input_mail_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sign_up_input_mail_id"
                app:layout_constraintTop_toBottomOf="@+id/space7"/>

            <EditText
                android:id="@+id/sign_up_input_mail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D3CCCC"
                android:ems="15"
                android:fontFamily="@font/asap_medium"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#BFBDBD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_email_heading"/>

            <TextView
                android:id="@+id/sign_up_edit_text_mobile_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:textColor="?android:textColor"
                android:text="Mobile No."
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_input_phno"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sign_up_input_phno"
                app:layout_constraintTop_toBottomOf="@+id/space9"/>

            <EditText
                android:id="@+id/sign_up_input_phno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D3CCCC"
                android:ems="15"
                android:fontFamily="@font/asap_medium"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:textColorHint="#BFBDBD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_mobile_heading"/>

            <TextView
                android:id="@+id/sign_up_edit_text_password_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="Password"
                android:textColor="?android:textColor"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_input_pass"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sign_up_input_pass"
                app:layout_constraintTop_toBottomOf="@+id/space10"/>

            <EditText
                android:id="@+id/sign_up_input_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D3CCCC"
                android:ems="15"
                android:fontFamily="@font/asap_medium"
                android:hint="Create Strong Password"
                android:inputType="textPassword"
                android:textColorHint="#BFBDBD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_edit_text_password_heading"/>

            <Space
                android:id="@+id/space4"
                android:layout_width="0dp"
                android:layout_height="@dimen/major_component_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_input_pass"/>

            <Button
                android:id="@+id/signup"
                android:layout_width="307dp"
                android:layout_height="0dp"
                android:background="?colorSecondary"
                android:fontFamily="sans-serif-medium"
                android:text="Sign Up >>"
                app:backgroundTint="?colorSecondary"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space4"/>

            <Space
                android:id="@+id/space6"
                android:layout_width="0dp"
                android:layout_height="@dimen/major_component_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_text2"/>

            <Space
                android:id="@+id/space7"
                android:layout_width="0dp"
                android:layout_height="@dimen/minor_component_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_input_username"/>

            <Space
                android:id="@+id/space9"
                android:layout_width="0dp"
                android:layout_height="@dimen/minor_component_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_input_mail_id"/>

            <Space
                android:id="@+id/space10"
                android:layout_width="0dp"
                android:layout_height="@dimen/minor_component_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_up_input_phno"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/end_component_gap"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup"
                app:layout_constraintVertical_bias="0.0"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/sign_up_fill_form"
                app:layout_constraintEnd_toStartOf="@+id/sign_up_heading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>