<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordFragment">

    <EditText
        android:id="@+id/forgot_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="    Enter Mobile Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space17"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/get_OTP"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:text="Get OTP >>"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space18"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/forgot_password_header"
        android:layout_width="179dp"
        android:layout_height="34dp"
        android:fontFamily="@font/alice"
        android:text="Forgot Password"
        android:textColor="@color/secondary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space19" />

    <TextView
        android:id="@+id/forgot_phone_label"
        android:layout_width="131dp"
        android:layout_height="25dp"
        android:fontFamily="@font/alice"
        android:text="Mobile Number"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/forgot_phone_number"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/forgot_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/forgot_phone_number"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sign_in_logo_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="AapanaVyapar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_logo4"
        app:layout_constraintStart_toStartOf="@+id/sign_in_logo4"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo4"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/sign_in_logo4"
        android:layout_width="107dp"
        android:layout_height="86dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space25"
        app:srcCompat="@drawable/logoav" />

    <Space
        android:id="@+id/space15"
        android:layout_width="0dp"
        android:layout_height="@dimen/END_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/space19"
        android:layout_width="0dp"
        android:layout_height="@dimen/MINOR_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_text4" />

    <Space
        android:id="@+id/space17"
        android:layout_width="0dp"
        android:layout_height="@dimen/major_component_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_header" />

    <Space
        android:id="@+id/space18"
        android:layout_width="0dp"
        android:layout_height="@dimen/minor_component_gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_phone_label" />

    <Space
        android:id="@+id/space16"
        android:layout_width="0dp"
        android:layout_height="@dimen/END_Component_Gap"
        app:layout_constraintBottom_toTopOf="@+id/space22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_OTP" />

    <Space
        android:id="@+id/space22"
        android:layout_width="0dp"
        android:layout_height="@dimen/END_Component_Gap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space18"
        app:layout_constraintVertical_bias="0.797" />

    <Space
        android:id="@+id/space25"
        android:layout_width="0dp"
        android:layout_height="@dimen/MAJOR_Component_Gap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space15" />

</androidx.constraintlayout.widget.ConstraintLayout>


