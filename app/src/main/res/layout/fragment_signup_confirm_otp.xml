<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupConfirmOtpFragment">


    <EditText
        android:id="@+id/signup_forgot_password_confirm_otp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:hint="            Enter Here"
        android:inputType="number"
        android:textColorHint="#D1D0D0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:translationY="-20dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_forgot_password_confirm_otp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/forgot_password_confirm_otp_heading"
        android:layout_width="49dp"
        android:layout_height="29dp"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Enter Here"
        android:text="OTP "
        android:textSize="24sp"
        android:textStyle="bold"
        android:translationY="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_text3"
        app:layout_constraintVertical_bias="0.278" />

    <Button
        android:id="@+id/signup_forgot_password_confirm_otp_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="278dp"
        android:layout_height="76dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:hint="Enter Here"
        android:text="Confirm OTP"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:translationY="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_otp_signup" />

    <TextView
        android:id="@+id/resend_otp_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:hint="Enter Here"
        android:text="Resend OTP >>"
        android:textStyle="bold"
        android:translationY="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_confirm_otp_heading" />

    <ImageView
        android:id="@+id/sign_in_logo3"
        android:layout_width="107dp"
        android:layout_height="86dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoav" />

    <TextView
        android:id="@+id/sign_in_logo_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="AapanaVyapar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo3"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>