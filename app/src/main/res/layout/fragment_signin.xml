<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:fadeScrollbars="true"
    tools:context=".SigninFragment">


    <ImageView
        android:id="@+id/sign_in_logo_port"
        android:layout_width="108dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoav"
        android:contentDescription="logo" />

    <TextView
        android:id="@+id/sign_in_logo_text_port"
        android:layout_width="156dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/asap"
        android:letterSpacing="0.1"
        android:text="AapanaVyapar"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_logo_port"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/sign_in_logo_port"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_port"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sign_in_header_port"
        android:layout_width="128dp"
        android:layout_height="71dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inknut_antiqua_light"
        android:text="Sign In"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_header_title_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_logo_text_port"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/sign_in_header_title_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/antic"
        android:text="Hi there! Nice to see you again."
        android:textColor="#100F0F"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_phoneNo_label_port"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_header_port"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_in_header_port" />


    <TextView
        android:id="@+id/sign_in_phoneNo_label_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="Mobile No."
        android:textColor="#121111"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_input_phoneNo_port"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_input_phoneNo_port"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_in_input_phoneNo_port" />

    <EditText
        android:id="@+id/sign_in_input_phoneNo_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:backgroundTint="#C8C8C8"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="Enter Phone No."
        android:inputType="phone"
        android:textColorLink="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_password_label_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/sign_in_password_label_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/asap"
        android:text="Password"
        android:textColor="#191818"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_input_password_port"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_input_password_port"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_in_input_password_port" />

    <EditText
        android:id="@+id/sign_in_input_password_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:backgroundTint="#C8C8C8"
        android:ems="10"
        android:fontFamily="@font/asap"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorLink="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sign_in_forgot_password_port"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/sign_in_forgot_password_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/asap"
        android:text="Forgot Password?"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/sign_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sign_in"
        android:layout_width="241dp"
        android:layout_height="49dp"
        android:layout_marginBottom="36dp"
        android:background="#1464f6"
        android:text="Sign In >>"
        app:backgroundTint="@color/secondary"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_in"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_in"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_up_in" />

    <Button
        android:id="@+id/sign_up_in"
        android:layout_width="241dp"
        android:layout_height="49dp"
        android:layout_marginBottom="56dp"
        android:background="#0075ff"
        android:text="SIGN UP"
        app:backgroundTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>