<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/productoncardclick_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:fadeScrollbars="true"
    android:clickable="true"
    tools:context=".ProductOnCardClick">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/customborder"
                    tools:ignore="MissingConstraints">


                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <ImageView
                            android:id="@+id/productoncardclick_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/productoncardclick_favourite_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/productoncardclick_image"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="5dp"
                            android:scaleType="fitXY"
                            android:button="@drawable/custom_checkbox_heart" />

                        <CheckBox
                            android:id="@+id/productoncardclick_bookmark_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/productoncardclick_image"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="0dp"
                            android:scaleType="fitXY"
                            android:button="@drawable/custom_checkbox_bookmark" />

                    </RelativeLayout>
              </LinearLayout>

            <TextView
                android:id="@+id/productoncardclick_productname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Product Name"
                android:fontFamily="@font/asap"
                android:textColor="?android:textColor"
                android:textStyle="bold"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/productoncardclick_productprice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/asap"
                android:text="Price :"
                android:textColor="?android:textColor"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/productoncardclick_stock_text"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/productoncardclick_price_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap"
                android:text="1000/-"
                android:textColor="?android:textColor"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.115"
                app:layout_constraintStart_toEndOf="@+id/productoncardclick_productprice_text"
                app:layout_constraintTop_toTopOf="@+id/productoncardclick_productprice_text" />

            <TextView
                android:id="@+id/productoncardclick_quantity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productoncardclick_productname_text"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/asap"
                android:textStyle="bold"
                android:textColor="?android:textColor"
                android:textSize="17dp"
                android:text="Quantity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_productname_text" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="44dp"
                android:layout_height="18dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:fontFamily="@font/asap"
                android:inputType="numberDecimal"
                android:textColor="?android:textColorPrimary"
                app:layout_constraintStart_toEndOf="@+id/productoncardclick_quantity_text"
                app:layout_constraintTop_toTopOf="@+id/productoncardclick_quantity_text" />

            <TextView
                android:id="@+id/productoncardclick_stock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productoncardclick_productname_text"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/asap"
                android:text="Available Stock :"
                android:textColor="?android:textColor"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/productoncardclick_button_buy"
                app:layout_constraintEnd_toEndOf="@+id/productoncardclick_button_buy"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_productprice_text"
                app:layout_constraintVertical_bias="0.285" />

            <TextView
                android:id="@+id/productoncardclick_stockno_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productoncardclick_productname_text"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/asap"
                android:text="10"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/productoncardclick_stock_text"
                app:layout_constraintTop_toTopOf="@+id/productoncardclick_stock_text" />

            <TextView
                android:id="@+id/productoncardclick_deliverycharges_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Delivery Charges : "
                android:textSize="17dp"
                android:fontFamily="@font/asap"
                android:textStyle="bold"
                android:textColor="?android:textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_quantity_text" />

            <TextView
                android:id="@+id/productoncardclick_deliveryamount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap"
                android:text="500Paise"
                android:textSize="17dp"
                app:layout_constraintStart_toEndOf="@+id/productoncardclick_deliverycharges_text"
                app:layout_constraintTop_toTopOf="@+id/productoncardclick_deliverycharges_text" />

            <TextView
                android:id="@+id/productoncardclick_offer_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/asap"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="Offer :"
                android:textColor="?android:textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_deliverycharges_text" />

            <TextView
                android:id="@+id/productoncardclick_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/asap"
                android:text="10%"
                android:textSize="17dp"
                app:layout_constraintBottom_toTopOf="@+id/first_line"
                app:layout_constraintStart_toEndOf="@+id/productoncardclick_offer_head"
                app:layout_constraintTop_toTopOf="@+id/productoncardclick_offer_head"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/productoncardclick_button_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="12dp"
                android:text="Buy Now"
                app:layout_constraintBottom_toTopOf="@+id/first_line"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/first_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:textColor"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_offer_head" />

            <TextView
                android:id="@+id/productoncardclick_description_text_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textSize="17dp"
                android:fontFamily="@font/asap"
                android:textStyle="bold"
                android:textColor="?android:textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/first_line" />

            <TextView
                android:id="@+id/productoncardclick_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/asap"
                android:textSize="17dp"
                android:text="Product Description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_description_text_heading" />


            <View
                android:id="@+id/second_line"
                android:layout_width="412dp"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:background="?android:textColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_description_text" />

            <TextView
                android:id="@+id/productoncardclick_shipping_info_text_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Shipping Info"
                android:textSize="17dp"
                android:fontFamily="@font/asap"
                android:textStyle="bold"
                android:textColor="?android:textColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/second_line" />

            <TextView
                android:id="@+id/productoncardclick_shipping_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/asap"
                android:textSize="17dp"
                android:text="Shipping Info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productoncardclick_shipping_info_text_heading" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>